<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      内容:<%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, class: 'form-inline') do |f| %>
  <div class="form-group">
    <label for="exampleName">名前:</label>
    <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Kira Taro" %>
  </div>
  <div class="form-group">
    <label for="body">内容:</label>
    <%= f.text_area :body, class: "form-control", id: "body" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary"%>
<% end %>