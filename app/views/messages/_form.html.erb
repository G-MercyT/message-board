<%= form_for(@message, class: 'form-inline') do |f| %>
  <% if @message.errors.present? %>
  <div class="alert alert-danger">
    <%= alert %>
    <ul>
      <% @message.errors.full_messages.each do |full_message| %>
      <li>
        <%= full_message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <label for="exampleName">名前:</label>
    <%= f.text_field :name, class: "form-control", id: "exampleName", placeholder: "Kira Taro" %>
  </div>
  <div class="form-group">
    <label for="exampleBody">内容:</label>
    <%= f.text_area :body, class: "form-control", id: "exampleBody", :maxlength => "140" %>
  </div>
  <div class="row">
    <div class="col-xs-2 .col-sm-2">
      <div class="form-group">
        <label for="exampleAge">年齢:</label>
        <%= f.number_field :age, class: "form-control", id: "exampleAge", size: "50px", placeholder: "半角数字のみ" %>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary"%>
<% end %>